{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "target": "es5",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "paths": {
      "@portal/*": ["src/*"],
    },
    "resolveJsonModule": true,
  },
  "exclude": ["node_modules"]
}