{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["vite/client"],
    "skipLibCheck": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": false, 
    "noUnusedParameters": false,
    "noEmit": true,
    "paths": {
      "@portal/*": ["src/*"],
    },
  },
  "exclude": ["node_modules"]
}